/*place global styles here */
html, body { @apply h-full; }

.btn {
    @apply font-bold py-1 px-3 rounded;
}
.btn-blue {
    @apply bg-blue-500 text-white;
}
.btn-blue:hover {
    @apply bg-blue-700;
}

.input-text {
    @apply shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight;
}

.input-text:focus {
    @apply outline-none;
}